<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.example.myapp</string>

    <!-- スクリプトのパス -->
    <key>ProgramArguments</key>
    <array>
        <string>/usr/local/bin/my_app_manager.sh</string>
    </array>

    <!-- ログを出力する場所（オプション） -->
    <key>StandardOutPath</key>
    <string>/tmp/myapp_stdout.log</string>
    <key>StandardErrorPath</key>
    <string>/tmp/myapp_stderr.log</string>

    <!-- 起動時に実行 -->
    <key>RunAtLoad</key>
    <true/>

    <!-- スクリプトを常に実行し続ける -->
    <key>KeepAlive</key>
    <true/>
</dict>
</plist>
